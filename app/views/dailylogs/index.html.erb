<%- model_class = Dailylog -%>
<div class="page-header">
  <h1>
    <%= @topic.title %>
    <small>
      <%= @topic.description %>
    </small>
  </h1>
</div>


<%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_user_topic_path(current_user, @topic), :class => 'btn' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            user_topic_path(current_user, @topic),
            :method => 'delete',
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-danger' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:logged_on) %></th>
      <th><%= model_class.human_attribute_name(:score) %></th>
      <th><%= model_class.human_attribute_name(:memo) %></th>
    </tr>
  </thead>
  <tbody>
    <% @dailylogs.each do |dailylog| %>
      <tr>
        <td><%= dailylog.logged_on %></td>
        <td><%= dailylog.score %></td>
        <td><%= dailylog.memo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

