<%= form_for @dailylog, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :logged_on, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :logged_on, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :score, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :memo, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :memo, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :topic_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :topic_id, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dailylogs_path, :class => 'btn' %>
  </div>
<% end %>
