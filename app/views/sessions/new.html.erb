<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', default: [:'helpers.titles.login'] %></h1>
</div>

<%= form_tag({action: :create}, {class: 'form-horizontal'}) do %>
  <div class="control-group">
    <%= label_tag :email, nil, class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :email, nil, class: 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= label_tag :password, nil, class: 'control-label' %>
    <div class="controls">
      <%= password_field_tag :password, nil, class: 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Log in", :class => 'btn btn-primary' %>
    <%= link_to t('.title', default: [:'helpers.titles.new', 'New %{model}'], model: model_class.model_name.human.titleize),
                new_user_path,
                class: 'btn' %>
  </div>
<% end %>
